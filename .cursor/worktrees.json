{
  "project": "payment-service",
  "workflow": "feature-isolation",
  "branches": {
    "main": "dev",
    "prefix": {
      "parent": "feature/",
      "sub": "task/"
    }
  },
  "automation": {
    "merge_strategy": "squash",
    "delete_after_merge": true,
    "hooks": {
      "pre_commit": "bun run lint:fix && bun run format",
      "pre_push": "bun run test:ci"
    }
  },
  "naming_convention": {
    "pattern": "{type}/{ticket-id}-{description}",
    "types": ["feat", "fix", "refactor", "chore", "docs"]
  }
}
