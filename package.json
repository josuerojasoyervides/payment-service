{
  "name": "payment-service",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:unit": "ng test --configuration unit",
    "test:integration": "ng test --configuration integration",
    "test:ci": "ng test --configuration ci",
    "test:ci:unit": "ng test --configuration ci-unit",
    "test:ci:integration": "ng test --configuration ci-integration",
    "test:coverage": "ng test --coverage",
    "dep:check": "depcruise src",
    "dep:graph": "depcruise src --include-only '^src' --output-type dot | dot -Tsvg > dependency-graph.svg",
    "lint": "eslint \"src/**/*.ts\" \"src/app/**/*.html\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"src/app/**/*.html\" --fix",
    "format": "prettier \"src/**/*.{ts,html,scss,css,json,md}\" --write",
    "format:check": "prettier \"src/**/*.{ts,html,scss,css,json,md}\" --check",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=24.13.0",
    "bun": ">=1.3.6"
  },
  "lint-staged": {
    "*.{ts,html,scss,css,json,md}": [
      "prettier --write"
    ],
    "*.{ts,html}": [
      "eslint --fix"
    ]
  },
  "private": true,
  "packageManager": "bun@1.3.6",
  "dependencies": {
    "@angular-architects/ngrx-toolkit": "^21.0.1",
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/router": "^21.1.0",
    "@ngrx/signals": "^21.0.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "xstate": "^5.25.1"
  },
  "devDependencies": {
    "@angular-eslint/builder": "21.1.0",
    "@angular/build": "^21.1.0",
    "@angular/cli": "^21.1.0",
    "@angular/compiler-cli": "^21.1.0",
    "@eslint/js": "^9.39.1",
    "@ngrx/eslint-plugin": "21.0.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.0.10",
    "@vitest/coverage-v8": "^4.0.17",
    "angular-eslint": "21.1.0",
    "autoprefixer": "^10.4.23",
    "bun": "^1.3.6",
    "dependency-cruiser": "^17.3.6",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.18",
    "ts-morph": "^27.0.2",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.47.0",
    "vitest": "^4.0.17"
  }
}
